    <!-- Container -->
    <div>
        <div class="bg-green-500 text-white p-6">
            <div class="flex justify-between items-center">
                <h1 class="text-xl font-bold">Anrekus Digital Store</h1>
                <div class="cursor-pointer hover:bg-green-600 p-2 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-cart" viewBox="0 0 16 16">
                        <path
                            d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </svg>
                </div>
            </div>
            <div class="mt-6">
                <input type="text" placeholder="Mau belanja apa hari ini?" class="text-sm focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-transparent focus:ring-offset-2 rounded px-2.5 py-2 w-full text-gray-800" />
            </div>
        </div>

        <div class="p-6 bg-white">
            <h1 class="text-xl text-gray-700 font-semibold">New Product</h1>
            <div class="mt-4 gap-2 flex overflow-scroll-style overflow-x-scroll">
                <% [{
                    name: 'Dev Server Discord',
                    category: 'Discord Product',
                    priceRange: [5000, 50000]
                },
                {
                    name: 'Discord Nitro Boost',
                    category: 'Discord Product',
                    priceRange: [50000, 100000]
                },
                {
                    name: 'Minecraft Account',
                    category: 'Minecraft Product',
                    priceRange: [15000, 40000]
                },
                {
                    name: 'Build Qris',
                    category: 'Jasa',
                    priceRange: [5000, 7000]
                }].map(data=> { %>
                    <div class="mb-3">
                        <div class="cursor-pointer w-[200px] hover:bg-slate-100 hover:shadow-sm bg-slate-50 rounded-lg p-2">
                            <img class="w-48 rounded"
                                src="https://cdn.discordapp.com/attachments/1043830809309753395/1061310031468965948/multiracial-group-young-creative-people-smart-casual-wear-discussing-business-brainstorming-meeting-ideas-mobile-application-software-design-project-modern-office-coworker-teamwork-concept.jpg" />
                            <div class="p-2 mt-2">
                                <p class="text-gray-600"><%- data.name %></p>
                                <p class="text-gray-400 text-sm mb-4"><%- data.category %></p>
                                <h1 class="text-sm text-green-400 font-bold">Rp. <%- data.priceRange[0].toLocaleString() %> - Rp. <%- data.priceRange[data.priceRange.length-1].toLocaleString() %></h1>
                                <p class="mt-4 text-indigo-400 text-sm hover:text-indigo-500 flex gap-2 items-center">
                                    Read More <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
                                        fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                                    </svg></p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <!-- bottom navbar -->
    <div class="bottom-navbar border-t border-gray-100">
        <div class="bottombar-item">
            <a class="active">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-house"
